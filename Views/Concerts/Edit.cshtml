@model INETAssignment1.Models.Concert

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Concert</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="concertID" />
            <div class="form-group">
                <label asp-for="concertName" class="control-label"></label>
                <input asp-for="concertName" class="form-control" />
                <span asp-validation-for="concertName" class="text-danger"></span>
            </div>
            <div class="form-group my-3">
                <label asp-for="tourName" class="control-label"></label>
                <input asp-for="tourName" class="form-control" />
                <span asp-validation-for="tourName" class="text-danger"></span>
            </div>
            <div class="form-group my-3">
                <label asp-for="bandID" class="control-label"></label>
                <select asp-for="bandID" class="form-control" asp-items="ViewBag.bandID"></select>
                <span asp-validation-for="bandID" class="text-danger"></span>
            </div>
            <div class="form-group my-3">
                <label asp-for="locationID" class="control-label"></label>
                <select asp-for="locationID" class="form-control" asp-items="ViewBag.locationID"></select>
                <span asp-validation-for="locationID" class="text-danger"></span>
            </div>
            <div class="form-group my-3">
                <label asp-for="concertTime" class="control-label"></label>
                <input asp-for="concertTime" class="form-control" />
                <span asp-validation-for="concertTime" class="text-danger"></span>
            </div>
            <div>
                @if (!String.IsNullOrEmpty(Model.filename))
                {
                    <img src="@Model.filename" alt="@Model.filename" class="thumbnail" />
                }
                else
                {
                    <img src="https://nscc0513060storageblob.blob.core.windows.net/concerthub-photo-uploads/placeholder-1-e1533569576673.webp" alt="@Model.filename" class="thumbnail" />
                }
            </div>
            <div class="form-group my-3">
                <label asp-for="FormFile" class="form-label">Change Photo</label>
                <input asp-for="FormFile" class="form-control" />
                <span asp-validation-for="FormFile" class="text-danger"></span>
            </div>
            <div class="form-group my-3">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
