@model INETAssignment1.Models.Concert

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    @if (!String.IsNullOrEmpty(Model.filename))
    {
        <div>
            <img src="@Model.filename" alt="@Model.filename" class="w-50 my-2" />
        </div>
    }
    else
    {
        <div>
            <img src="/photos/placeholder-1-e1533569576673.webp" alt="@Model.filename" class="w-50 my-2" />
        </div>
    }
    <dl class="row">
        <dt class = "col-sm-2 my-2">
            @Html.DisplayNameFor(model => model.concertName)
        </dt>
        <dd class="col-sm-10 my-2">
            @Html.DisplayFor(model => model.concertName)
        </dd>
        <dt class="col-sm-2 my-2">
            @Html.DisplayNameFor(model => model.tourName)
        </dt>
        <dd class="col-sm-10 my-2">
            @Html.DisplayFor(model => model.tourName)
        </dd>
        <dt class="col-sm-2 my-2">
            @Html.DisplayNameFor(model => model.headliningBand)
        </dt>
        <dd class="col-sm-10 my-2">
            @Html.DisplayFor(model => model.headliningBand.bandName)
        </dd>
        <dt class="col-sm-2 my-2">
            @Html.DisplayNameFor(model => model.concertLocation)
        </dt>
        <dd class="col-sm-10 my-2">
            @Html.DisplayFor(model => model.concertLocation.locationName)
        </dd>
        <dt class="col-sm-2 my-2">
            @Html.DisplayNameFor(model => model.concertTime)
        </dt>
        <dd class="col-sm-10 my-2">
            @Html.DisplayFor(model => model.concertTime)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="concertID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
