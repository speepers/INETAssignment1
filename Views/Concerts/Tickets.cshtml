@model IEnumerable<INETAssignment1.Models.Purchase>

@{
    ViewData["Title"] = "Purchased Tickets";
    var concertTitle = ViewData["ConcertTitle"] ?? "Concert";
}

<h1>Purchased Tickets for @concertTitle</h1>

<p>
    <a asp-action="Index">Back to Concerts</a>
</p>

@if (!Model.Any())
{
    <div class="alert alert-info">No tickets have been purchased for this concert yet.</div>
}
else
{
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.First().purchaseID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().ticketsOrdered)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().orderDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().customerName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().customerEmail)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().creditCardNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().CVV)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().expiryDate)
                </th>
                <th></th> <!-- actions -->
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.purchaseID</td>
                    <td>@item.ticketsOrdered</td>
                    <td>@item.orderDate.ToString("yyyy-MM-dd")</td>
                    <td>@item.customerName</td>
                    <td>@item.customerEmail</td>
                    <td>@item.creditCardNumber</td>
                    <td>@item.CVV</td>
                    <td>@item.expiryDate.ToString("yyyy-MM")</td>
                </tr>
            }
        </tbody>
    </table>
}